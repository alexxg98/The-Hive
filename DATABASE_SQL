CREATE TABLE registered_users(
    id INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
    email VARCHAR(255) NOT NULL,
    username VARCHAR(25) NOT NULL,
    password VARCHAR(255) NOT NULL,
    reputation_score INT NOT NULL,
    user_type VARCHAR(20) NOT NULL,
    UNIQUE KEY (email),
    UNIQUE KEY (username)
);

CREATE TABLE groups(
    id INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(25) NOT NULL,
    creator_id INT,
    size INT NOT NULL,
    FOREIGN KEY(creator) REFERENCES registered_users(id) ON DELETE SET NULL
);

CREATE TABLE group_membership(
    user_id INT, 
    group_id INT,
    FOREIGN KEY(user_id) REFERENCES registered_users(id) ON DELETE SET NULL
    FOREIGN KEY(group_id) REFERENCES groups(id) ON DELETE SET NULL
);

CREATE TABLE projects(
    project_id INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
    project_name VARCHAR(25) NOT NULL,
    creator_id INT,
    FOREIGN KEY(creator_id) REFERENCES registered_users(id) ON DELETE SET NULL
);

CREATE TABLE black_list(
    id INT(255) NOT NULL PRIMARY KEY AUTO_INCREMENT,
    user_id INT(255) NOT NULL,
    FOREIGN KEY(user_id) REFERENCES registered_users(id)
);

CREATE TABLE white_list(
    id INT(255) NOT NULL PRIMARY KEY AUTO_INCREMENT,
    user_id INT(255) NOT NULL,
    FOREIGN KEY(user_id) REFERENCES registered_users(id)
);


*documents, how many users and who (username) is in one group, how many and what groups is user in, storing events sceduled in groups
user_type = Ordinary, VIP, SUPER
