CREATE TABLE users(
    id INT PRIMARY KEY AUTO_INCREMENT,
    email VARCHAR(255) NOT NULL,
    username VARCHAR(25) NOT NULL,
    password VARCHAR(255) NOT NULL,
    reputation_score INT,
    user_type ENUM('OU', 'VIP', 'SU'),
    UNIQUE KEY (email),
    UNIQUE KEY (username)
);

CREATE TABLE groups(
    id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(25) NOT NULL,
    creator_id INT,
    size INT NOT NULL,
    FOREIGN KEY(creator) REFERENCES users(id) ON DELETE SET NULL
);

CREATE TABLE group_membership(
    user_id INT PRIMARY KEY,
    group_id INT PRIMARY KEY,
    FOREIGN KEY(user_id) REFERENCES users(id) ON DELETE SET NULL
    FOREIGN KEY(group_id) REFERENCES groups(id) ON DELETE SET NULL
);

CREATE TABLE projects(
    project_id INT PRIMARY KEY AUTO_INCREMENT,
    project_name VARCHAR(25) NOT NULL,
    creator_id INT,
    FOREIGN KEY(creator_id) REFERENCES users(id) ON DELETE SET NULL
);

CREATE TABLE black_list(
    blacklister_id INT PRIMARY KEY,
    blacklisted_id INT PRIMARY KEY,
    FOREIGN KEY(blacklister_id) REFERENCES users(id)
    FOREIGN KEY(blacklisted_id) REFERENCES users(id)
);

CREATE TABLE white_list(
    whitelister_id INT PRIMARY KEY,
    whitelisted_id INT PRIMARY KEY,
    FOREIGN KEY(whitelister_id) REFERENCES users(id)
    FOREIGN KEY(whitelisted_id) REFERENCES users(id)
);

